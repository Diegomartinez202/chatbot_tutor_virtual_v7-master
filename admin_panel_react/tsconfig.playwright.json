{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    "types": [ "@playwright/test", "node" ],
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.js",
    "tests/**/*.jsx",
    "tests/**/*.json",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}